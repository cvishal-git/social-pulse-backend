{
  "compilerOptions": {
    "module": "ESNext", // Use ES Modules
    "moduleResolution": "Node",
    "target": "ESNext", // For modern JavaScript
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
